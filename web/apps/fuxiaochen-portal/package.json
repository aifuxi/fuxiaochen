{
  "name": "fuxiaochen-portal",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "cross-env NODE_ENV=production next build",
    "lint": "next lint",
    "postbuild": "next-sitemap --config next-sitemap.config.cjs",
    "build:analyzer": "cross-env ANALYZE=true next build",
    "prepare": "husky",
    "lint:fix": "eslint --fix --quiet --concurrency auto .",
    "lint:inspect": "eslint --inspect-config .",
    "format": "prettier --write --log-level warn .",
    "commit": "cz",
    "commit:retry": "cz --retry",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:reload": "pm2 reload ecosystem.config.cjs",
    "pm2:logs": "pm2 logs ecosystem.config.cjs",
    "pm2:status": "pm2 status ecosystem.config.cjs",
    "pm2:delete": "pm2 delete ecosystem.config.cjs"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@bprogress/next": "^3.2.12",
    "@bytemd/plugin-breaks": "^1.22.0",
    "@bytemd/plugin-frontmatter": "^1.22.0",
    "@bytemd/plugin-gfm": "^1.22.0",
    "@bytemd/plugin-highlight-ssr": "^1.22.0",
    "@bytemd/plugin-medium-zoom": "^1.22.0",
    "@bytemd/react": "^1.22.0",
    "@hugeicons/core-free-icons": "^3.1.1",
    "@hugeicons/react": "^1.1.4",
    "@iconify-json/fa6-brands": "^1.1.18",
    "@iconify-json/logos": "^1.1.42",
    "@iconify-json/skill-icons": "^1.1.8",
    "@next/bundle-analyzer": "16.0.1",
    "@next/third-parties": "16.0.1",
    "ahooks": "^3.9.6",
    "bytemd": "^1.22.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "es-toolkit": "^1.39.10",
    "fuxiaochen-types": "workspace:*",
    "globals": "^16.3.0",
    "highlight.js": "^11.9.0",
    "lowlight": "^3.1.0",
    "next": "16.0.10",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "rehype-highlight": "^7.0.0",
